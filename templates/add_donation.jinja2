{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    <select id="donor" name="donor">
        {% for donor in donors %}
            <option value="{{ donor.name }}">{{ donor.name }}</option>
        {% endfor %}
    </select>
    <label for="amount">Amount:</label><input id="amount" type="text" name="amount">
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}